# ====== LLM / OpenAI ======
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-5
LLM_TEMPERATURE=0
LLM_MAX_OUTPUT_TOKENS=6000

# ====== Entradas / Salidas por defecto ======
# Podés overridear con variables de Make: CONTEXT, MER_OUT, PRISMA_OUT
CONTEXT_PACK=context/context-pack.example.json
MER_OUT=schema/mer.json
PRISMA_OUT=schema/schema.prisma

# ====== Prisma (opcional, solo si vas a usar el schema.prisma generado) ======
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mydb?schema=public

# ====== Figma MCP (opcional, si luego integrás extracción directa) ======
FIGMA_API_KEY=your_figma_api_key_here
FIGMA_ACCESS_TOKEN=your_figma_access_token_here
FIGMA_FILE_ID=your_figma_file_id_here

# ====== Docs MCP (opcional) ======
DOCS_RESOURCES_DIR=./vira

# ====== Otros ======
LOG_LEVEL=INFO
TZ=America/Montevideo